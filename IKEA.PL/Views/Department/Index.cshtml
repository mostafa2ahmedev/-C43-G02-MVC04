@model IEnumerable<DepartmentToReturnDto>
@{
    ViewData["Title"] = "Departments";
}

@if (Model.Any())
{
        <table class="table">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(m => m.Name)</th>
                    <th>@Html.DisplayNameFor(m => m.CreationDate)</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            @foreach (var department in Model)
            {
                        <tr>
                            <td>@department.Name</td>
                            <td>@department.CreationDate.ToShortDateString()</td>
                            <td>
                                <a asp-action="Details" asp-route-id="@department.Id" class="btn btn-info">
                                    <i class="fas fa-eye"></i> Details
                                </a>
                                <a asp-action="Edit" asp-route-id="@department.Id" class="btn btn-warning">
                                    <i class="fas fa-edit"></i> Edit
                                </a>
                                <a asp-action="Delete" asp-route-id="@department.Id" class="btn btn-danger">
                                    <i class="fas fa-trash"></i> Delete
                                </a>
                            </td>
                        </tr>
            }
            </tbody>
        </table>
}
else
{
        <div class="alert alert-warning">No departments found.</div>
}